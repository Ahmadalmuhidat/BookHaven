<Page x:Class="Book_Shop_Management_System.Pages.SalesDatabase"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Book_Shop_Management_System.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SalesDatabase">

    <Grid Background="White" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Actions -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
            <TextBox x:Name="search_input"
               Width="300" Height="30"
               VerticalAlignment="Center"
               Margin="0,0,10,0"
               ToolTip="Search by Member ID, Book ID, etc."/>
            <Button x:Name="search_button"
              Content="Search"
              Width="100" Height="30"
              Margin="0,0,10,0"
              Click="search"/>
            <Button x:Name="delete_button"
              Content="Delete Selected"
              Width="120" Height="30"
              Click="delete"/>
        </StackPanel>

        <!-- Sales Table -->
        <DataGrid x:Name="Sales" Grid.Row="2"
              AutoGenerateColumns="False"
              HeadersVisibility="Column"
              GridLinesVisibility="Horizontal"
              CanUserAddRows="False"
              CanUserDeleteRows="False"
              IsReadOnly="True"
              RowHeaderWidth="0"
              BorderBrush="#ddd"
              BorderThickness="1"
              ColumnWidth="*">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Sale ID" Binding="{Binding SaleID}" MinWidth="80"/>
                <DataGridTextColumn Header="Member ID" Binding="{Binding SaleMemberID}" MinWidth="100"/>
                <DataGridTextColumn Header="Book ID" Binding="{Binding SaleBookID}" MinWidth="100"/>
                <DataGridTextColumn Header="Quantity" Binding="{Binding SaleQuantity}" MinWidth="100"/>
                <DataGridTextColumn Header="Employee" Binding="{Binding SaleEmployee}" MinWidth="120"/>
                <DataGridTextColumn Header="Sale Date" Binding="{Binding SaleDate}" MinWidth="150"/>
                <DataGridTextColumn Header="Sale Total" Binding="{Binding SaleTotal}" MinWidth="100"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Page>
