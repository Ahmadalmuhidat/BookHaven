<Page x:Class="Book_Shop_Management_System.Pages.PurchasesDatabase"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Book_Shop_Management_System.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PurchasesDatabase">

    <Grid Background="White" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Actions -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
            <TextBox x:Name="search_input"
               Width="300" Height="30"
               VerticalAlignment="Center"
               Margin="0,0,10,0"
               ToolTip="Search by Book ID, Supplier ID, etc."/>
            <Button x:Name="search_button"
              Content="Search"
              Width="100" Height="30"
              Margin="0,0,10,0"
              Click="search"/>
            <Button x:Name="delete_button"
              Content="Delete Selected"
              Width="120" Height="30"
              Click="delete"/>
        </StackPanel>

        <!-- DataGrid -->
        <DataGrid x:Name="Purchases" Grid.Row="2"
              AutoGenerateColumns="False"
              HeadersVisibility="Column"
              GridLinesVisibility="Horizontal"
              CanUserAddRows="False"
              CanUserDeleteRows="False"
              IsReadOnly="True"
              RowHeaderWidth="0"
              BorderBrush="#ddd"
              BorderThickness="1"
              ColumnWidth="*">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Purchase ID" Binding="{Binding PurchaseID}" MinWidth="80"/>
                <DataGridTextColumn Header="Book ID" Binding="{Binding PurchaseBookID}" MinWidth="100"/>
                <DataGridTextColumn Header="Supplier ID" Binding="{Binding PurchaseSupplierID}" MinWidth="100"/>
                <DataGridTextColumn Header="Quantity" Binding="{Binding PurchaseQuantity}" MinWidth="100"/>
                <DataGridTextColumn Header="Purchase Date" Binding="{Binding PurchaseDate}" MinWidth="120"/>
                <DataGridTextColumn Header="ETA" Binding="{Binding PurchaseETA}" MinWidth="150"/>
                <DataGridTextColumn Header="Received" Binding="{Binding PurchaseReceived}" MinWidth="80"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
