<Page x:Class="Book_Shop_Management_System.Pages.Profiles.EmployeeProfile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Book_Shop_Management_System.Pages.Profiles"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EmployeeProfile">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" BorderBrush="Gray" Background="#f0f0f0" BorderThickness="1" Padding="10" Margin="0,0,0,10">
            <TextBlock Text="Employee Details" FontSize="20" FontWeight="Bold" TextAlignment="Center"/>
        </Border>

        <!-- Employee Info Section -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Employee Image -->
            <Border BorderBrush="Gray" Background="#f9f9f9" BorderThickness="1" Padding="5" Margin="0,0,10,0">
                <Image x:Name="EmployeeImage" Width="250" Height="150" Stretch="UniformToFill" />
            </Border>

            <!-- Left Column Details -->
            <StackPanel Grid.Column="1" VerticalAlignment="Top" >
                <TextBlock x:Name="EmployeeID" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5" TextWrapping="Wrap"/>
                <TextBlock x:Name="EmployeeFullName" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5" TextWrapping="Wrap"/>
                <TextBlock x:Name="EmployeeAddressLine1" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5" TextWrapping="Wrap"/>
                <TextBlock x:Name="EmployeeAddressLine2" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5" TextWrapping="Wrap"/>
                <TextBlock x:Name="EmployeeAddressCity" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5" TextWrapping="Wrap"/>
            </StackPanel>

            <!-- Right Column Details -->
            <StackPanel Grid.Column="2" VerticalAlignment="Top" Margin="15,0,0,0">
                <TextBlock x:Name="EmployeeAdressState" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5" TextWrapping="Wrap"/>
                <TextBlock x:Name="EmployeePhoneNumber" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5" TextWrapping="Wrap"/>
                <TextBlock x:Name="EmployeeDateOfJoining" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5" TextWrapping="Wrap"/>
                <TextBlock x:Name="EmployeeSalary" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5" TextWrapping="Wrap"/>
                <TextBlock x:Name="EmployeeMGRStatus" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5" TextWrapping="Wrap"/>
            </StackPanel>
        </Grid>

        <!-- Previous Sales Header -->
        <Border Grid.Row="2" BorderBrush="Gray" Background="#f0f0f0" BorderThickness="1" Padding="10" Margin="0,0,0,10">
            <TextBlock Text="Previous Sales" FontSize="20" FontWeight="Bold" TextAlignment="Center"/>
        </Border>

        <!-- Sales DataGrid -->
        <DataGrid Grid.Row="3" x:Name="Sales" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True"
                  HeadersVisibility="Column" RowHeight="30" Margin="0" VerticalScrollBarVisibility="Auto">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Sale ID" Binding="{Binding SaleID}" MinWidth="100" Width="*" />
                <DataGridTextColumn Header="Member ID" Binding="{Binding SaleMemberID}" MinWidth="100" Width="*" />
                <DataGridTextColumn Header="Book ID" Binding="{Binding SaleBookID}" MinWidth="100" Width="*" />
                <DataGridTextColumn Header="Quantity" Binding="{Binding SaleQuantity}" MinWidth="80" Width="*" />
                <DataGridTextColumn Header="Sale Date" Binding="{Binding SaleDate}" MinWidth="120" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
